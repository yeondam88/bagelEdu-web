---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const posts = await getCollection('blog');
---

<Layout title="Blog | Bright">
  <main class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12">Latest Insights</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="group">
          <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
            <Image 
              src={post.data.image} 
              alt={post.data.title} 
              width={800}
              height={400}
              class="w-full h-48 object-cover" 
            />
            <div class="p-6">
              <p class="text-sm text-gray-500 mb-2">{post.data.date}</p>
              <h2 class="text-xl font-semibold mb-3 group-hover:text-primary">{post.data.title}</h2>
              <p class="text-gray-600 line-clamp-2">{post.data.excerpt}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>