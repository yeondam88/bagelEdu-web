---
import { Image } from 'astro:assets'
import { SOCIALS, CONTACT } from '@config'
import { getCollection } from 'astro:content'
import logo from '@images/bageledu-logo-transparent.png'
import type { Program } from '@types'

const programs: Program[] = await getCollection('programs')
---

<footer class="bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <div class="xl:grid xl:grid-cols-4 xl:gap-8">
      <div class="space-y-8 bg-white rounded-full p-4 w-32 h-32">
        <a href="/">
          <Image src={logo} alt="Bright" class="h-auto w-full" />
        </a>
      </div>

      <div class="mt-16 grid grid-cols-2 gap-8 xl:col-span-3 xl:mt-0">
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div class="text-left">
            <h3 class="text-sm font-semibold leading-6 text-white">서비스</h3>
            <ul role="list" class="mt-6 space-y-4">
              {programs.map((program) => (
                <li>
                  <a href={program.data.hero.action.href} class="text-sm leading-6 text-gray-300 hover:text-white">{program.data.name}</a>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-10 md:mt-0 text-left">
            <h3 class="text-sm font-semibold leading-6 text-white">문의하기</h3>
            <ul role="list" class="mt-6 space-y-4">
              <li>
                <p class="text-sm leading-6 text-gray-300">Email: {CONTACT.email}</p>
              </li>
              <li>
                <p class="text-sm leading-6 text-gray-300">Phone: {CONTACT.phone}</p>
              </li>
              <li>
                <p class="text-sm leading-6 text-gray-300">
                  월-금 9:00AM - 6:00PM [PST]<br />
                </p>
              </li>
            </ul>
          </div>
        </div>
        <div class="md:grid md:grid-cols-2 md:gap-8">
          <div class="text-right">
            <h3 class="text-sm font-semibold leading-6 text-white">자료 링크</h3>
            <ul role="list" class="mt-6 space-y-4">
              <li>
                <a href="https://youtube.com" target="_blank" rel="noopener noreferrer" class="text-sm leading-6 text-gray-300 hover:text-white">Youtube</a>
              </li>
              <li>
                <a href="https://instagram.com" target="_blank" rel="noopener noreferrer" class="text-sm leading-6 text-gray-300 hover:text-white">Instagram</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
