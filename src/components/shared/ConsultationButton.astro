<script>
  import { animate } from 'motion'

  const button = document.querySelector('[data-consultation-button]')
  
  if (button) {
    button.addEventListener('mouseenter', () => {
      animate(button, { 
        scale: 1.02,
        boxShadow: "0 10px 20px rgba(126, 34, 206, 0.2)"
      }, { 
        duration: 0.2,
        easing: [.22, .03, .26, 1]
      })
    })

    button.addEventListener('mouseleave', () => {
      animate(button, { 
        scale: 1,
        boxShadow: "0 4px 6px -1px rgba(126, 34, 206, 0.1)"
      }, { 
        duration: 0.2,
        easing: [.22, .03, .26, 1]
      })
    })

    button.addEventListener('mousedown', () => {
      animate(button, { scale: 0.98 }, { 
        duration: 0.1,
        easing: [.22, .03, .26, 1]
      })
    })

    button.addEventListener('mouseup', () => {
      animate(button, { scale: 1 }, { 
        duration: 0.1,
        easing: [.22, .03, .26, 1]
      })
    })
  }
</script>

<button
  data-consultation-button
  class="w-auto px-6 py-2.5 text-base font-medium text-white rounded-full bg-gradient-to-r from-purple-600 to-purple-500 shadow-lg transition-all hover:from-purple-500 hover:to-purple-400"
>
  상담 예약하기
</button> 