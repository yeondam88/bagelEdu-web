---
import { Image } from 'astro:assets'
import type { Program } from '@types'

interface Props {
  program: Program
}

const {
  program,
  program: {
    data: {
      descriptionSection: { portraitImage, squareImages },
    },
  },
} = Astro.props
const { Content } = await program.render()
---

<section class="relative overflow-hidden bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      {/* Left column - Content */}
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
      
      {/* Right column - Images */}
      <div class="space-y-8">
        <div class="aspect-h-4 aspect-w-3 relative">
          <Image
            src={portraitImage.src}
            class="absolute inset-0 h-full w-full rounded-2xl object-cover shadow-lg"
            alt={portraitImage.alt}
          />
        </div>
        <div class="grid grid-cols-2 gap-4">
          {squareImages.map((image) => (
            <div class="aspect-h-1 aspect-w-1 relative">
              <Image
                src={image.src}
                class="absolute inset-0 h-full w-full rounded-2xl object-cover shadow-lg"
                alt={image.alt}
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .prose :global(h2) {
    @apply text-3xl font-bold text-purple-900 mb-6;
  }
  .prose :global(h3) {
    @apply text-2xl font-semibold text-purple-800 mb-4;
  }
  .prose :global(p) {
    @apply text-gray-600 mb-6 leading-relaxed;
  }
  .prose :global(ul) {
    @apply space-y-3 mb-6;
  }
  .prose :global(li) {
    @apply flex items-start;
  }
  .prose :global(li::before) {
    content: "â€¢";
    @apply text-purple-600 mr-2 font-bold;
  }
</style>
