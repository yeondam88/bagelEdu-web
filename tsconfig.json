{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@images/*": ["images/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@config": ["config.ts"],
      "@types": ["types.ts"]
    }
  }
}
